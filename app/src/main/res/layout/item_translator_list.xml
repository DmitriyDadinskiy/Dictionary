<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_item_icon"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_gravity="center"
        android:layout_marginStart="4dp"
        app:srcCompat="@android:drawable/dialog_holo_dark_frame" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="@dimen/margin8dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/item_word_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/word" />

        <TextView
            android:id="@+id/item_translation_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            tools:text="@string/translation" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_square_bracket_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.6"
                android:text="[" />

            <TextView
                android:id="@+id/item_transcription_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                tools:text="@string/transcription" />

            <TextView
                android:id="@+id/item_square_bracket2_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.6"
                android:text="]" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>